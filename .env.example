# App runtime
NODE_ENV=production
PORT=3000
TZ=Asia/Shanghai

# Security
JWT_SECRET=change-me-in-production-use-at-least-32-characters
CORS_ORIGINS=http://localhost:5173
ENABLE_API_DOCS=false
ALLOW_REGISTRATION=true
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# Database
# sqlite | postgresql | mysql
DB_TYPE=sqlite
DATABASE_URL=file:/app/data/todo.db

# Docker image tag for sakullla/taskflow
IMAGE_TAG=latest

# TLS / HTTPS (used by deployment scripts)
TLS_DOMAIN=todo.example.com
TLS_EMAIL=ops@example.com
# true for Let's Encrypt staging endpoint during dry runs
TLS_STAGING=false

# Production validation target
BASE_URL=https://todo.example.com
